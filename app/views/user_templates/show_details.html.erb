<h1><%= @the_user.username %></h1>

<dl>
  <dt>ID</dt>
    <dd><%= @the_user.id %></dd>
  <dt>Edit User</dt>
    <dd><form action="/update_user/<%= @the_user.id %>">
  <label for="the_new_username">Username</label>
  <input id="the_new_username" type="text" name="new_user" placeholder="Enter a username..." value="<%= @the_user.username %>">
  <button>Update user</button>
</form></dd>
</dl>

<h2>Own Photos (<% @the_user.own_photos.count%>)</h2>

<table border="1">
  <tr>
    <th>Image</th>
    <th>Owner</th>
    <th>Caption</th>
    <th>Posted</th>
    <th></th>
  </tr>

  <% @the_user.own_photos.each do |a_photo|%>
  <tr>
    <td><img scr="<%= a_photo.image %>"></td>
    <td><%= a_photo.poster.username %></td>
    <td><%= a_photo.caption %></td>
    <td><%= a_photo.created_at %></td>
    <td><a href="/photo">Show Details</a></td>
  </tr>

  <%end%>
</table>
